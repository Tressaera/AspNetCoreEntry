@model Candidate;

<form method="post" asp-action="Apply">
    <div class="container col-6">
    <div class="display-6">
            Apply
        </div>
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-2">
        <label asp-for="Email">E-Mail</label>
        <input asp-for="Email" class="form-control" />
    </div>   
    
    <div class="form-group my-2">
        <label asp-for="FirstName">First name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>   
    
    <div class="form-group my-2">
        <label asp-for="LastName">Last name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group my-2">
    <label>Age</label>
    <select name="Age" class="form-select">
    <option value="18">18</option>
    <option value="19">19</option>
    <option value="20">20</option>
    <option value="21">21</option>
    <option value="22">22</option>
    <option value="23">23</option>
    </select>
    </div>

    <fieldset>
    <legend>Select One Course</legend>
    <p>
    <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET COURSE MVC" />
    <label>ASP.NET Core MVC</label>
   </fieldset>
    <fieldset>
    <input id="APİ" type="radio" asp-for="SelectedCourse" value="ASP.NET COURSE MVC" />
    <label>ASP.NET Core API</label>
    </p>
    </fieldset>

    <button class="btn btn-primary" type="submit">Apply</button>
    <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</form>
